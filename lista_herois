<?php

    print "***TOP FIVE HERÓIS DO MUNDO***\n";

    $herois = ['Batmam', 'Goku', 'Thor', 'Viúva Negra', 'Groot', 'Naruto'];
    $herois [] = 'Capitão Gancho';

    for($i = 0; $i <= sizeof($herois); $i++) {// sizeof ou count = conta os elementos de uma lista
            print ($i + 1) . " lugar: " . $herois[$i] . "\n";// usar o ponto ( . ) como se fosse uma vígula
            //pesquisar array unshift, e outros
        }
